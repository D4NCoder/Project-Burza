                </h1>
                <p class="text-white link-nav"><a href="@Url.Action("Index", "Home")">Domů </a>  <span class="lnr lnr-arrow-right"></span>  <a href="@Url.Action("Trips", "Trip")" "> Výlety</a></p>
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
@if (SignInManager.IsSignedIn(User) && Model.Count() != 0)
{
