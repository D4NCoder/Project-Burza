@using ProjectBurza.Models;
@model EmailModel;


<!-- start banner Area -->
<section class="relative about-banner">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    Kontaktuj nás
                </h1>
                <p class="text-white link-nav"><a href="index.html">Domů </a>  <span class="lnr lnr-arrow-right"></span>  <a href="contact.html"> Kontakt</a></p>
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
<!-- Start contact-page Area -->
<section class="contact-page-area section-gap">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 d-flex flex-column address-wrap">
                <div class="single-contact-address d-flex flex-row">
                    <div class="icon">
                        <span class="lnr lnr-coffee-cup "></span>
                    </div>
                    <div class="contact-details">
                        <h5>Společnost která se o tebe postará</h5>
                        <p>Jsme ti k službám 24 hodin / 7 dní v týdnu </p>
                    </div>
                </div>

                <div class="single-contact-address d-flex flex-row">
                    <div class="icon">
                        <span class="lnr lnr-thumbs-up"></span>
                    </div>
                    <div class="contact-details">
                        <h5>Faceboook</h5>
                        <p><a href="http://www.facebook.com/DanVyhlidal97" target="_blank">http://www.facebook.com/</a></p>
                    </div>
                </div>

                <div class="single-contact-address d-flex flex-row">
                    <div class="icon">
                        <span class="lnr lnr-envelope"></span>
                    </div>
                    <div class="contact-details">
                        <h5>holexchange@gmail.com</h5>
                        <p>Neboj se nás kontaktovat přes e-mail!</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <form class="form-area contact-form text-right" id="ContactForm" asp-action="SendEmail" method="post">
                    <div class="row">
                        <div class="col-lg-6 form-group">
                            <input name="FromName" asp-for="FromName" placeholder="Zadej své jméno" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Zadej své jméno'" class="common-input mb-20 form-control" required="" type="text">
                            <input name="FromAdress" asp-for="FromAdress" placeholder="Zadej svůj email" pattern="[A-Za-z0-9._%+-]+@@[A-Za-z0-9.-]+\.[A-Za-z]{1,63}$" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Zadej svůj email'" class="common-input mb-20 form-control" required="" type="email">

                            <input name="subject" asp-for="Subject" placeholder="Zadej předmět" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Zadej předmět'" class="common-input mb-20 form-control" required="" type="text">
                        </div>
                        <div class="col-lg-6 form-group">
                            <textarea asp-for="Body"class="common-textarea form-control" name="Body" placeholder="Zpráva" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Zpráva'" required=""></textarea>
                        </div>
                        <div class="col-lg-12">
                            <div class="alert-msg" style="text-align: left;"></div>
                            <button type="submit" class="genric-btn primary" style="float: right;" value="Odeslat zprávu" form="ContactForm">Odeslat zprávu</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>xw
<!-- End contact-page Area -->
