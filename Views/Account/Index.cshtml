                                                            <thead>
                                                                <tr class="text-primary">
                                                                    <th>Název výletu</th>
                                                                    <th>Cena</th>
                                                                    <th>Datum</th>
                                                                    <th>Lokace</th>
                                                                    <th></th>
                                                                    <th></th>
                                                                </tr>
                                                            </thead>
